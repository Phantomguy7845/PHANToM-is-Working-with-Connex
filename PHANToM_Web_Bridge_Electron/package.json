{
  "name": "phantom-web-bridge",
  "version": "1.2.1",
  "description": "PHANToM Web Bridge (Electron + Tray + ADB)",
  "author": "PHANToM",
  "license": "MIT",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Phantomguy7845/PHANToM-is-Working-with-Connex.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "adbkit": "^2.12.2",
    "cors": "^2.8.5",
    "electron-store": "^8.2.0",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^28.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.phantom.webbridge",
    "productName": "PHANToM Web Bridge",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "store.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron/dist/",
        "to": ".",
        "filter": ["**/*.dll"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "PHANToM-Web-Bridge-${version}-win.${ext}",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PHANToM Web Bridge",
      "artifactName": "PHANToM-Web-Bridge-Setup-${version}.exe"
    }
  }
}
